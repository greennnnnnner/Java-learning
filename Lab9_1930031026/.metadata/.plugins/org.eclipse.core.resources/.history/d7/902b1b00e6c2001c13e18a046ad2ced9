
public class Door {
	private boolean isOpen;
	public Door() {//constructor
		this.isOpen=false;//default closed door
	}
	public boolean isOpen() {
		return this.isOpen;
	}
	public void open() {
		this.isOpen=true;
	}
	public void close() {
		this.isOpen=false;
	}
public static void testDoor() {
	Door d = new Door();
	System.out.println(d.isOpen() == false);
	d.close();
	System.out.println(d.isOpen() == false);
	d.open();
	System.out.println(d.isOpen() == true);
	}
}
